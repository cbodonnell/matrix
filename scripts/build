#!/bin/bash

sudo systemctl stop nst_path_api
sudo rsync -av --progress ./ /etc/nst_path_api --exclude scripts --exclude working --exclude Jenkinsfile --delete --filter='P .env' --filter='P venv/'
cd /etc/nst_path_api/nst_path_api
sudo python3 venv venv
source venv/bin/activate
sudo pip install -r requirements.txt
sudo systemctl start nst_path_api
