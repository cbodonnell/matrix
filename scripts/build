#!/bin/bash

sudo rsync -av --progress ./ /media/PI-EXT/web/networks --exclude scripts --exclude working --exclude Jenkinsfile --delete
cd /media/PI-EXT/web/networks
sudo python3 -m venv venv
sudo wget https://raw.githubusercontent.com/naztronaut/RaspberryPi-RGBW-Control/master/utils/activate_this.py -P venv/bin
source venv/bin/activate
sudo venv/bin/pip3 install -r requirements.txt
